{
    "manifest_version": 3,
    "name": "FozDocs Recorder (React)",
    "version": "2.0",
    "description": "Gravador de tela para Manuais FozDocs - Vers√£o React/Mantine",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "index.html",
        "default_title": "Abrir Gravador FozDocs"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}