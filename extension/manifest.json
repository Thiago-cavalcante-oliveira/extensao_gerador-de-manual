{
    "manifest_version": 3,
    "name": "FozDocs Recorder",
    "version": "1.1",
    "description": "Gravador de tela para Manuais FozDocs",
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "http://localhost:8000/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Abrir Gravador FozDocs"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}